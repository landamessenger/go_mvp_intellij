<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.landamessenger.go_mvp.go_mvp_intellij</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>go_mvp (Flutter)</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor email="support@landamessenger.com" url="https://www.landamessenger.com">Landa Messenger</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
    <img width="20%" vspace="20" src="https://github.com/landamessenger/go_mvp_intellij/raw/master/images/sample.png">

    <p>Tool to work with <a href="https://pub.dev/packages/go_mvp">go_mvp</a> quickly. Create new screens with MVP architecture with just one click.</p><br>
    <em>Only for Flutter</em>
  ]]></description>

    <change-notes>
        <![CDATA[
<h2>1.0.0</h2>

<p>- First version. Implements the basic controls for the creation of new screens with MVP architecture. Works on the <a href="https://pub.dev/packages/go_mvp">go_mvp</a> package.</p>

<h2>0.0.1</h2>

<p>- Test version</p>
]]>
    </change-notes>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.terminal</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">

    </extensions>
    <actions>
        <action id="com.landamessenger.go_mvp.go_mvp_intellij.GoMvpPlugin"
                class="com.landamessenger.go_mvp.go_mvp_intellij.GoMvpPlugin"
                text="MVP screen"
                description="Creates a new MVP screen in the given directory"
                icon="com.intellij.icons.ExpUiIcons.Actions.Generated">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewDir"/>
        </action>
    </actions>
</idea-plugin>